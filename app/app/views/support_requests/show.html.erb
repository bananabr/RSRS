<p id="notice"><%= notice %></p>

<div class="panel panel-default">
	<div class="panel-heading">Request #<%= @support_request.id %></div>
	<div class="panel-body">
		<p>
		<strong>Justification:</strong>
		<%= @support_request.justification %>
		</p>

		<p>
		<strong>Shared key:</strong>
		<%= @support_request.shared_key %>
		</p>

		<p>
		<strong>Provider:</strong>
		<%= @support_request.provider %>
		</p>

		<p>
		<strong>Request created at:</strong>
		<%= @support_request.created_at %>
		</p>

		<p>
		<strong>Tunnel created at:</strong>
		<%= @support_request.tunnel_created_at %>
		</p>

		<p>
		<strong>Ttl:</strong>
		<%= @support_request.ttl %>
		</p>

		<p>
		<strong>Expired:</strong>
		<%= @support_request.expired %>
		</p>

	</div>
</div>
<%= link_to 'Request list', support_requests_path %>

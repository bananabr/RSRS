<%= form_for(@support_request) do |f| %>
	<% if @support_request.errors.any? %>
		<div id="error_explanation" class="alert alert-danger">
			<span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
			<span class="sr-only">Error</span>
			<strong><%= pluralize(@support_request.errors.count, t('.error_banner_header.one'), t('.error_banner_header.other')) %>:</strong>
			<ul>
				<% @support_request.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<div class="field">
			<%= f.label :justification %>:<br>
			<%= f.text_area :justification, class: "form-control" %>
		</div>
	</div>
	<div class="actions">
		<%= f.submit t("defaults.create").capitalize,class: "btn btn-primary" %>
	</div>
<% end %>
